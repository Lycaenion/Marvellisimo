<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CharacterActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="218dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/character_series"/>
    <ImageView
            android:layout_width="178dp"
            android:layout_height="171dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/character_thumbnail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/character_series"
            app:layout_constraintVertical_bias="0.156"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/character_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/character_thumbnail"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/character_series"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.068" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Learn More"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wiki_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/character_series"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/character_thumbnail"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintVertical_bias="0.588"/>
    <TextView
            android:text="Series where the character appears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_series_header" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/character_series" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wiki_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>